{
  "name": "classroom-hub-next",
  "private": true,
  "packageManager": "npm@10.8.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "i": "npm install",
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "verify": "npm --prefix apps/api run build && npm --prefix apps/web run typecheck && cd prisma && npx prisma validate",
    "prisma:generate": "cd apps/api && npx prisma generate --schema ../../prisma/schema.prisma",
    "prisma:migrate": "cd prisma && npx prisma migrate dev",
    "prisma:push": "cd prisma && npx prisma db push",
    "api:dev": "npm --prefix apps/api run start:dev",
    "api:build": "npm --prefix apps/api run build",
    "api:seed": "ts-node --esm prisma/seed.ts",
    "web:dev": "npm --prefix apps/web run dev"
  },
  "devDependencies": {
    "turbo": "2.1.3",
    "typescript": "^5.6.3",
    "prettier": "^3.3.3",
    "eslint": "^9.12.0"
  }
}
